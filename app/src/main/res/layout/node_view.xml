<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:paddingRight="10dp"
                  android:paddingLeft="10dp"
                  android:layout_height="wrap_content">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/llLeft"
                          android:orientation="horizontal"
                          android:weightSum="10"
                          android:gravity="start"
                          android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:id="@+id/cardLeft"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="7dp"
                        android:layout_margin="0dp"
                        android:layout_weight="4"
                        android:layout_height="100dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:background="@drawable/card_background"
                                    android:layout_height="100dp">
                        <TextView android:layout_width="match_parent"
                                  android:id="@+id/tvNameLeft"
                                  android:textColor="@color/colorWhite"
                                  android:hint="Name"
                                  android:padding="5dp"
                                  android:fontFamily="sans-serif-condensed"
                                  android:textSize="20sp"
                                  android:gravity="center"
                                  android:layout_height="wrap_content"/>
<!--                        <TextView android:layout_width="match_parent"-->
<!--                                  android:id="@+id/tvAddressLeft"-->
<!--                                  android:textSize="15sp"-->
<!--                                  android:padding="5dp"-->
<!--                                  android:textColor="@color/colorWhite"-->
<!--                                  android:gravity="center"-->
<!--                                  android:layout_below="@+id/tvNameLeft"-->
<!--                                  android:hint="Address"-->
<!--                                  android:layout_height="wrap_content"/>-->
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <View android:layout_width="0dp"
                      android:layout_weight="4"
                      android:id="@+id/viewRight1"
                      android:background="@color/colorWhite"
                      android:layout_gravity="center"
                      android:layout_height="5dp"/>
                <View android:layout_width="0dp"
                      android:layout_weight=".15"
                      android:id="@+id/viewRight2"
                      android:layout_marginTop="55dp"
                      android:background="@color/colorWhite"
                      android:layout_height="60dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    app:cardElevation="7dp"
                    android:id="@+id/leftCard"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="bottom|start"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:textSize="11sp"
                          android:layout_gravity="center"
                          android:padding="5dp"
                          android:id="@+id/tvLeftDistributer"
                          android:gravity="center"
                          android:textColor="@android:color/black"
                          android:hint="Classification1"
                          android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:weightSum="10"
                          android:id="@+id/llRight"
                          android:gravity="end"
                          android:layout_height="wrap_content">
                <View android:layout_width="0dp"
                      android:id="@+id/viewLeft1"
                      android:layout_weight=".15"
                      android:layout_marginTop="55dp"
                      android:background="@color/colorWhite"
                      android:layout_height="60dp"/>
                <View android:layout_width="0dp"
                      android:layout_weight="4"
                      android:id="@+id/viewLeft2"
                      android:background="@color/colorWhite"
                      android:layout_gravity="center"
                      android:layout_height="5dp"/>

                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="7dp"
                        android:id="@+id/cardRight"
                        android:layout_margin="0dp"
                        android:layout_weight="4"
                        android:layout_height="100dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:background="@drawable/card_background"
                                    android:layout_height="100dp">
                        <TextView android:layout_width="match_parent"
                                  android:id="@+id/tvNameRight"
                                  android:hint="Name"
                                  android:fontFamily="sans-serif-condensed"
                                  android:padding="5dp"
                                  android:textSize="20sp"
                                  android:textColor="@color/colorWhite"
                                  android:gravity="center"
                                  android:layout_height="wrap_content"/>
<!--                        <TextView android:layout_width="match_parent"-->
<!--                                  android:id="@+id/tvAddressRight"-->
<!--                                  android:textSize="15sp"-->
<!--                                  android:padding="5dp"-->
<!--                                  android:textColor="@color/colorWhite"-->
<!--                                  android:gravity="center"-->
<!--                                  android:layout_below="@+id/tvNameRight"-->
<!--                                  android:hint="Address"-->
<!--                                  android:layout_height="wrap_content"/>-->
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    app:cardElevation="7dp"
                    android:id="@+id/rightCard"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="bottom|end"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:textSize="11sp"
                          android:layout_gravity="center"
                          android:padding="5dp"
                          android:id="@+id/tvRightDistributer"
                          android:gravity="center"
                          android:textColor="@android:color/black"
                          android:hint="Classification2"
                          android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
        </FrameLayout>
        <FrameLayout android:layout_width="match_parent"
                     android:visibility="gone"
                     android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/llLeft1"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/llRight1"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
            </LinearLayout>
        </FrameLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:paddingRight="10dp"
                      android:paddingLeft="10dp"
                      android:id="@+id/farmerLayout"
                      android:visibility="gone"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="4"
                          android:id="@+id/imageFarmerLeft"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="match_parent"
                           android:src="@drawable/farmer"
                           android:layout_gravity="start"
                           android:scaleType="fitCenter"
                           android:layout_height="120dp"/>
                <TextView android:layout_width="match_parent"
                          android:text="@string/you"
                          android:gravity="center"
                          android:textColor="@android:color/black"
                          android:layout_gravity="center"
                          android:textSize="14sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <View android:layout_width="0dp"
                  android:layout_height="60dp"
                  android:layout_weight="2"
                  />
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="4"
                          android:id="@+id/imageFarmerRight"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="match_parent"
                           android:src="@drawable/farmer"
                           android:layout_gravity="start"
                           android:scaleType="fitCenter"
                           android:layout_height="120dp"/>
                <TextView android:layout_width="match_parent"
                          android:text="@string/you"
                          android:gravity="center"
                          android:textColor="@android:color/black"
                          android:layout_gravity="center"
                          android:textSize="14sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>